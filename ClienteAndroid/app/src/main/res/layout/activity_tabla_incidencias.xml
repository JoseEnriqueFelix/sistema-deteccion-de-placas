<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:id="@+id/tablaIncidencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TableRow>
                <TextView android:text="Vehículo" android:padding="8dp" android:textStyle="bold"/>
                <TextView android:text="Operador" android:padding="8dp" android:textStyle="bold"/>
                <TextView android:text="Descripción" android:padding="8dp" android:textStyle="bold"/>
                <TextView android:text="Fecha" android:padding="8dp" android:textStyle="bold"/>
                <TextView android:text="Evidencia" android:padding="8dp" android:textStyle="bold"/>
                <TextView android:text="Latitud" android:padding="8dp" android:textStyle="bold"/>
                <TextView android:text="Longitud" android:padding="8dp" android:textStyle="bold"/>
            </TableRow>

        </TableLayout>

    </ScrollView>
</HorizontalScrollView>
